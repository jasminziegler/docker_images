{
  "name": "p datascience",
  "image": "pdsc_gpu:latest",
  "forwardPorts": [3000, 6006, 8888],
  "workspaceFolder": "/home/user/",
  "extensions": [
    "grapecity.gc-excelviewer",
    "ms-python.python"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.disableInstallationCheck": true,
    "terminal.integrated.inheritEnv": false,
    "python.pythonPath": "/usr/bin/python3",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.linting.enabled": true,
    "python.formatting.provider": "autopep8",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  "remoteUser": "user",
  "remoteEnv": {
    "TERM_PROGRAM": "vscode"
  },
  "runArgs": ["--gpus=all"],   
  "mounts": [
    "source=/mount/this/folder,target=/home/user/development,type=bind,consistency=cached",
    "source=./vscode-server,target=/home/user/.vscode-server,type=bind,consistency=cached"
  ]
}