version: '3'
services:
  rstudio:
    container_name: rdatascience
    image: r_datascience:latest
    # restart: unless-stopped
    ports:
    - "8787:8787" #rstudio
    - "3838:3838" #shiny
    - "54321:54321" #h2o flow
    volumes:
    - ./volume:/home/user/volume
    - /tmp/.X11-unix:/tmp/.X11-unix
    environment: 
    - DISPLAY=$DISPLAY
    network_mode: host
    build:
      context: .
    tty: true
    #command: bash -c "rstudio-server start && tail -f /dev/null"
